<script type="text/javascript">
	var userid = window.localStorage.getItem("userid");
	var id = getParameter("id");
	var isLogin = true;
	jQuery(document).ready(function() {
		getMixunInfo();

	});
	function getMixunInfo() {

		$.ajax({
			type : "post",
			url : url("Home.getMiMessageInfo&id="+id+""),
			dataType : "jsonp",
			jsonp : "callback",
			jsonpCallback : "aclist",
			success : function(json) {
				var m_name = json.messlist[0].title;
				var m_time = json.messlist[0].ctime;
				$('#name1').html(m_name);
				$('#ctime1').html(m_time);
				//$('#con1')[0].textContent = json.messlist[0].content1;
				//$('#pic1').attr('src', json.messlist[0].image1);
				//$('#con2')[0].textContent = json.messlist[0].content2;
				//$('#pic2').attr('src', json.messlist[0].image2);
				//$('#con3')[0].textContent = json.messlist[0].content3;
				//$('#pic3').attr('src', json.messlist[0].image3);
				//$('#con4')[0].textContent = json.messlist[0].content4;
				//$('#pic4').attr('src', json.messlist[0].image4);
				//$('#con5')[0].textContent = json.messlist[0].content5;
				//$('#pic5').attr('src', json.messlist[0].image5);
				checkText('#con1',json.messlist[0].content1);
				checkText('#con2',json.messlist[0].content2);
				checkText('#con3',json.messlist[0].content3);
				checkText('#con4',json.messlist[0].content4);
				checkText('#con5',json.messlist[0].content5);
				checkPic('#pic1',json.messlist[0].image1);
				checkPic('#pic2',json.messlist[0].image2);
				checkPic('#pic3',json.messlist[0].image3);
				checkPic('#pic4',json.messlist[0].image4);
				checkPic('#pic5',json.messlist[0].image5);
				
			},
			error : function() {
			}
		});

	}
	function checkText(id,text){
		 if(text.length>0){
			 $(id).html(text);
		 }else{
			 $(id).hide();
		}
	}
	function checkPic(id,pic){
		 if(pic.length>0){
			 $(id).attr('src',pic);
		 }else{
			 $(id).hide();
		}
	}
