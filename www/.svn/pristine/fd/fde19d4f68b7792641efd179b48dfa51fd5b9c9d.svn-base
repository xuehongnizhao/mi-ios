      </div>
  </div>



	

	<script type="text/javascript">	
	var goodsid = getParameter("goodsid");
		jQuery(document).ready(function() {
			evalList();
		});
	
	function evalList() {
	$.ajax({
        type: "post",
        url: url("RiceDetail.getEval&goodsid="+goodsid+""),
        dataType: "jsonp",
        jsonp: "callback",
        jsonpCallback:"evalall",
        success: function(json){
        	var html = template('s_eval', json);
			$("#e_eval").html(html);
			var html1 = template('s_eval1', json);
			$("#e_eval1").html(html1);
			var html2 = template('s_eval2', json);
			$("#e_eval2").html(html2);
			var html3 = template('s_eval3', json);
			$("#e_eval3").html(html3);
			$('#all')[0].textContent = json.sum[0].quanbu;
			$('#hao')[0].textContent = json.sum[0].haoping;
			$('#zhong')[0].textContent = json.sum[0].zhongping;
			$('#cha')[0].textContent = json.sum[0].chaping;
			$("#tabs").tabs();
        	
         },
        error: function(){
        }
	});
	}

		
	</script>

</body>
</html>