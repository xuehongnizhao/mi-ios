<title>Insert title here</title>
<link>

<style type="text/css">
.am-header .am-header-title {
margin: 0 15%;
}
.mi-title {
	background-color: #5b3914;
}

.doc-pannel {
	width: 100%;
	border-top: 1px solid #dddddd;
	height: 3em;
	line-height: 3em;
}

.doc-pannel span {
	border: none;
	width: 5em;
}

.doc-group {
	border-top-right-radius: 0;
	border-top-left-radius: 0;
	padding: 0em;
}

.doc-group:after {
	content: '';
	display: table;
	clear: both
}

.doc-group:before {
	display: block;
	color: #bbb;
	text-transform: uppercase;
	margin: 0 -15px 15px;
	padding: 4px 10px;
	font-size: 12px
}

body, html {
	width: 100%;
	background-image: url('img/mi_bg.png');
	background-size: cover;
	background-repeat: no-repeat;
}
hr {
	margin: 0em;
	margin-left: 1em;
	padding: 0px;
	border-top: 1px solid #e8e8e8;
}
.am-tabs-default .am-tabs-nav>.am-active a {
    background-color: transparent;
    color: #ff3b30;
}
.line {
	margin: 0px;
	padding: 0px;
	border-top: 1px solid #dddddd;
}
hr {
    margin: 0em;
    margin-left: 1em;
    padding: 0px;
    margin-right: 1em;
    border-top: 1px solid #e8e8e8;
}
</style>
</head>
<body>

	<!-- Header -->
	<header data-am-widget="header" style="background: #5b3914;"
		class="am-header am-header-default am-header-fixed mi-title">
		<div class="am-header-left am-header-nav">
			<a href="javascript:mi_exit(-1);" style="text-align: left"> <i
				class="am-icon-angle-left" style="font-size: 2em;"></i>
			</a>
		</div>
		<h1 class="am-header-title"
			style="font-size: 18px; text-align: left; margin: 0 10%;">评价</h1>
