<script type="text/javascript">
    var isLogin = true;

    var userid = window.localStorage.getItem('userid');

	if (userid == null || userid == "null") {
		isLogin = false;
	} else {
		isLogin = true;
	}
	jQuery(document).ready(function() {
		if (isLogin) {
			$("#v_login").show();
			$("#v_unlogin").hide();
			getUserInfo(userid);
		} else {
			$("#v_login").hide();
			$("#v_unlogin").show();

		}
		showCarCount();
	});
	
	function getUserInfo() {
		var userid = window.localStorage.getItem('userid');
		var token = window.localStorage.getItem('token');
		$.ajax({
			type : "post",
			url : url("MyPage.myInfo&u=" + userid + "&t=" + token),
			dataType : "jsonp",
			jsonp : "callback",
			jsonpCallback : "uinfo",
			success : function(json) {
				 if(json.loge == 0){
					 $('#userIcon').attr('src', json.uinfo[0].usericon);
		                $('#s_user_name')[0].textContent = json.uinfo[0].nickname.replace(/<br>/gi,"\n");
							var sex = json.uinfo[0].sex;
							if (sex == '男') {
								$('#sexIcon').attr('src', "img/Afterloggingin_11.png");
							} else if (sex == '女') {
								$('#sexIcon').attr('src', "img/Afterloggingin_14.png");
							}

							$('#userPhone')[0].textContent = json.uinfo[0].mobile;	 
										 
				 }else if(json.loge == 1){
					$("#v_login").hide();
					$("#v_unlogin").show();
					 return false;
				 }else if(json.loge == 2){	 
					 $("#v_login").hide();
					 $("#v_unlogin").show();
					 return false;
				 }
							

			},
			error : function() {
			}
		});
	}
	function setUp(){
		if(isLogin == true){
			window.location.href = "setup.html";
		}else{
			window.location.href = "login.html";
		}	
	}
	function quitlogin(){
		window.localStorage.setItem('userid',null);
		window.localStorage.setItem('token',null);
		window.location.href = "login.html";
	}
	function addrList(){
		if(isLogin){
			window.location.href = "addrlist.html";
		}else{
			window.location.href = "login.html";
		}
	}
</script>
